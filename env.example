# Supabase Configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Bot Tokens
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
DISCORD_BOT_TOKEN=your_discord_bot_token

# Telegram Management Configuration (Choose ONE approach)

# Option 1: Personal Chat (Original approach)
PERSONAL_TELEGRAM_ID=your_personal_telegram_chat_id

# Option 2: Group with Topics (RECOMMENDED for multiple users)
MANAGEMENT_CHAT_ID=your_group_chat_id
USE_TOPICS=true

# Note: MANAGEMENT_CHAT_ID will override PERSONAL_TELEGRAM_ID if both are set

# Discord Management Configuration

# Discord Server and Channel for conversation forwarding
MANAGEMENT_GUILD_ID=your_discord_server_id
MANAGEMENT_CHANNEL_ID=your_discord_channel_id
USE_THREADS=true

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Webhook URL for production Telegram bot
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook/telegram 